.form-group.input
    label {{ localize "MNM3E.Rank" }}
    input(type="text" name="data.rank" value="{{data.rank}}" data-dtype="Number" placeholder="0")

.form-group.input-select
    label {{ localize "MNM3E.Cost" }}
    input(type="text" name="data.cost" value="{{data.cost}}" data-dtype="Number" placeholder="0")
    .form-fields
        select(name="data.costType")
            | {{#select data.costType}}
            | {{#each config.rankCostTypes as |localizedName name|}}
            option(value="{{name}}") {{ localizedName }}
            | {{/each}}
            | {{/select}}