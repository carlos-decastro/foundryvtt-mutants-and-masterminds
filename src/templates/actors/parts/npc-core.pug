mixin score-config-button(scoreType, dataPath)
    a.config-button(
        title=`{{ localize 'MNM3E.${scoreType}Configure' }}`
        data-action="score-config"
        data-score-path=`data.${dataPath}`
        data-score-config-path=`${dataPath}`
    )
        i.fas.fa-cog

.traits-section.flexcol
    .trait
        label {{ localize "MNM3E.Initiative" }}
        input(type="number" name="data.attributes.initiative" value="{{data.attributes.initiative}}")
    .trait
        label {{ localize "MNM3E.PenaltyPoints" }}
        input(type="number" name="data.attributes.penaltyPoints" value="{{data.attributes.penaltyPoints}}")
    .ability-section.flexcol
        h4.section-title {{ localize 'MNM3E.Abilities' }}
            +score-config-button('Ability', 'abilities')
        ul.ability-scores.flexrow
            | {{#each data.abilities as |ability abilityName|}}
            li.ability.flexcol(data-ability="{{abilityName}}")
                label.ability-name.rollable {{ titleCase (lookup ../config.abilityAbbreviations abilityName) }}
                span.ability-score {{ ability.total }}
            | {{/each}}
    .defense-section.flexcol
        h4.section-title {{ localize "MNM3E.Defenses" }}
            +score-config-button('Defense', 'defenses')
        ul.defense-scores.flexrow
            | {{#each data.defenses as |defense defenseName|}}
            li.defense.flexcol(data-defense="{{defenseName}}")
                label.defense-name.rollable {{ titleCase (lookup ../config.defenseAbbreviations defenseName) }}
                span.defense-score {{ defense.total }}
            | {{/each}}
    .skills.flexcol
        div
            +score-config-button('Skill', 'skills')
            h4 {{ localize 'MNM3E.Skills' }}
        | {{#each data.skills as |skill skillName|}}
        .skill(data-skill="{{skillName}}")
            | {{#if (eq skill.type "static")}}
            | {{#if (gt skill.data.rank 0)}}
            span.skill-name.rollable {{ skill.label }} {{ numberFormat skill.data.rank sign=true }}{{#if (ne skill.data.total skill.data.rank)}} ({{ numberFormat skill.data.total sign=true }}){{/if}}
            | {{/if}}
            | {{else}}
            | {{#each skill.data as |subskill|}}
            | {{#if (gt subskill.rank 0)}}
            span.skill-name.rollable {{ subskill.displayName }} {{ numberFormat subskill.rank sign=true }}{{#if (ne subskill.total subskill.rank)}} ({{ numberFormat subskill.total sign=true }}){{/if}}
            | {{/if}}
            | {{/each}}
            | {{/if}}
        | {{/each}}

